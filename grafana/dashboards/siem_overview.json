          "rawSql": "WITH extracted_ips AS (\n  SELECT\n    timestamp,\n    message,\n    SUBSTRING(message FROM '([0-9]{1,3}\\.[0-9]{1,3}\\.[0-9]{1,3}\\.[0-9]{1,3})') as ip_address,\n    raw_details\n  FROM alerts\n  WHERE \n    $__timeFilter(timestamp)\n    AND message ~ '[0-9]{1,3}\\.[0-9]{1,3}\\.[0-9]{1,3}\\.[0-9]{1,3}'\n)\nSELECT\n  timestamp as time,\n  ip_address,\n  message,\n  CASE \n    WHEN raw_details::jsonb->'matches' ? 'tor_exit_node' THEN 'Tor Exit Node'\n    WHEN raw_details::jsonb->'matches' ? 'botnet' THEN 'Botnet'\n    WHEN raw_details::jsonb->'matches' ? 'spamhaus' THEN 'Spamhaus'\n    ELSE 'Unknown'\n  END as threat_type,\n  (raw_details::jsonb->>'score')::numeric as score\nFROM extracted_ips\nWHERE ip_address IS NOT NULL\nORDER BY timestamp DESC\nLIMIT 20",
          "refId": "A"
        }
      ],
      "title": "Detected Malicious IPs",
      "type": "table"
    }
  ],
